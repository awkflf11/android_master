<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_padding_size"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_size"
                android:background="#f1f1f1" />

            <RelativeLayout
                android:id="@+id/sender_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/one_cell_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/sender_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left_size"
                    android:text="装货人信息"
                    android:textColor="@color/write_text_color"
                    android:textSize="@dimen/write_text_size" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/back_icon_hui" />

                <TextView
                    android:id="@+id/send_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/arrow1"
                    android:layout_toRightOf="@id/sender_text"
                    android:gravity="right"
                    android:hint="请填写装货人信息"
                    android:singleLine="true"
                    android:textColor="@color/write_text_color"
                    android:textSize="@dimen/write_text_size" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:id="@+id/receiver_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/one_cell_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/receiver_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left_size"
                    android:text="卸货人信息"
                    android:textColor="@color/write_text_color"
                    android:textSize="@dimen/write_text_size" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/back_icon_hui" />

                <!--
                     <TextView
                    android:id="@+id/receive_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/arrow2"
                    android:hint="请填写卸货人信息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/write_text_size" />
                -->

                <TextView
                    android:id="@+id/receive_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/arrow2"
                    android:layout_toRightOf="@id/receiver_text"
                    android:gravity="right"
                    android:hint="请填写卸货人信息"
                    android:singleLine="true"
                    android:textColor="@color/write_text_color"
                    android:textSize="@dimen/write_text_size" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_size"
                android:background="#f1f1f1" />

            <RelativeLayout
                android:id="@+id/baoxian_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/one_cell_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left_size"
                    android:text="购买保险"
                    android:textColor="@color/write_text_color"
                    android:textSize="@dimen/write_text_size" />

                <ImageView
                    android:id="@+id/arrow3"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/back_icon_hui" />

                <TextView
                    android:id="@+id/baoxian_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/arrow3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/write_text_size" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_size"
                android:background="#f1f1f1" />

            <RelativeLayout
                android:id="@+id/discount_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/one_cell_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left_size"
                    android:text="代金券"
                    android:textColor="@color/write_text_color"
                    android:textSize="@dimen/write_text_size" />

                <ImageView
                    android:id="@+id/arrow4"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/back_icon_hui" />

                <TextView
                    android:id="@+id/daijinquan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/arrow4"
                    android:gravity="right"
                    android:hint="请填写代金券号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/write_text_size" />
            </RelativeLayout>

            <TextView
                android:id="@+id/daijinquan_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_size"
                android:layout_marginTop="7dp"
                android:textColor="@color/my_black_color"
                android:textSize="12dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_size"
                android:background="#f1f1f1" />

            <include
                android:id="@+id/payonoff_layout"
                layout="@layout/pay_onoffline_layout" />

            <TextView
                android:id="@+id/payonline_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_size"
                android:layout_marginTop="7dp"
                android:text="*选择在线支付送保险，最高¥100000保额"
                android:textColor="@color/write_text_color"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/payonline_hint_div"
                android:layout_width="fill_parent"
                android:layout_height="21dp"
                android:background="#f1f1f1" />

            <TextView
                android:id="@+id/discount_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_size"
                android:background="#f1f1f1" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/one_cell_height"
                android:background="@color/white"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/agree_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_left_size"
                    android:paddingRight="10dp"
                    android:text="同意三方协议"
                    android:textColor="@color/write_text_color"
                    android:textSize="@dimen/write_text_size" />

                <ImageView
                    android:id="@+id/checkimg3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/agree_text"
                    android:src="@drawable/check_off_btn"
                    android:tag="0" />

                <ImageView
                    android:id="@+id/arrow5"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:src="@drawable/back_icon_hui" />

                <TextView
                    android:id="@+id/fetch_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@id/arrow5"
                    android:hint="查看详情"
                    android:textSize="@dimen/write_text_size" />
            </RelativeLayout>

            <TextView
                android:id="@+id/payonline_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_size"
                android:layout_marginTop="7dp"
                android:text="*下单送保险，最高¥100000保额"
                android:textColor="@color/write_text_color"
                android:textSize="12dp" />

            <Button
                android:id="@+id/to_order"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="@dimen/padding_size"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/login_btn"
                android:text="确定下单"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/padding_size"
                android:background="#f1f1f1" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>