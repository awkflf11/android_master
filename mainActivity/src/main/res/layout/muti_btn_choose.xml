<?xml version="1.0" encoding="utf-8"?>
<com.foryou.truck.view.MutiChooseBtn2 xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_6_highlight"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="不要"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/btn2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn1_text"
            android:background="@drawable/btn_7"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:text="需要"
            android:textColor="@color/my_blue_color"
            android:textSize="15dp" />
    </RelativeLayout>

</com.foryou.truck.view.MutiChooseBtn2>