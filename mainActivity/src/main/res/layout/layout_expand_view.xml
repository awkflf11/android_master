<?xml version="1.0" encoding="utf-8"?>
<com.foryou.truck.view.ClickExpandView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="详情"
        android:textColor="@color/text_color2"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/switch_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/content_tv"
        android:background="@drawable/icon_down" />


</com.foryou.truck.view.ClickExpandView>