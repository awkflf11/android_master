<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="15dp" >

    <com.foryou.truck.view.TextViewWithIconFont
        android:id="@+id/send_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="16dp"
        android:textColor="@color/my_blue_color"
         />

    <TextView
        android:id="@+id/send_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/send_img"
        android:textColor="@color/black"
        android:textSize="@dimen/write_text_size" />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/send_place"
        android:layout_marginTop="12dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/send_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_black1_color"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="装货人姓名"/>

        <AutoCompleteTextView
            android:id="@+id/sender_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:layout_toRightOf="@id/send_name_text"
            android:dropDownVerticalOffset="10dp"
            android:hint="请输入装货人姓名"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/edittext_size" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_layout"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/send_phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/send_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_black1_color"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="装货人手机"/>

        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/choose_phone" />

        <com.foryou.truck.view.WithDelImgEditText
            android:id="@+id/sender_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/send_phone_text"
            android:layout_toLeftOf="@id/phone_img"
            android:background="@null"
            android:dropDownVerticalOffset="10dp"
            android:hint="请输入装货人手机"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/edittext_size" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/send_phone_layout"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/send_phone2_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/send_phone2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_black1_color"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="备用电话     "/>

        <com.foryou.truck.view.WithDelImgEditText
            android:id="@+id/sender_phone2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_toRightOf="@id/send_phone2_text"
            android:hint="备用电话(选填)"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/edittext_size" />
    </RelativeLayout>
</RelativeLayout>