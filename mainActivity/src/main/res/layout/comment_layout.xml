<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color">

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_layout" />

    <RelativeLayout
        android:id="@+id/confirm_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/main_background_color"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/my_blue_color"
            android:gravity="center"
            android:text="立即下单"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/confirm_ll"
        android:layout_below="@id/title_layout"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/avatar"
                android:textColor="@color/text_color1"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xinyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/avatar"
                android:text="信誉值"
                android:textColor="@color/text_color3"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/seek_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/xinyi" />

            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/seek_img"
                android:textColor="@color/text_color3"
                android:textSize="12dp" />

            <com.foryou.truck.view.TextViewWithIconFont
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:paddingBottom="18dp"
                android:text="@string/phone_icon"
                android:textColor="@color/my_blue_color"
                android:textSize="23dp" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/avatar"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="16dp"
                android:background="@color/line_color" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/chengdan_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_layout"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/yuechengdan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="月成单"
                android:textColor="@color/text_color2"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/zongchengdan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:text="总成单"
                android:textColor="@color/text_color2"
                android:textSize="14dp" />
        </LinearLayout>


        <View
            android:id="@+id/line_view"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_below="@id/chengdan_layout"
            android:background="#f1f1f1" />

        <include
            android:id="@+id/layout_yunfei"
            layout="@layout/yunfei_detail_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_view" />

        <View
            android:id="@+id/line_view2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/layout_yunfei"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#f1f1f1" />

        <TextView
            android:id="@+id/total_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line_view2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:paddingBottom="17dp"
            android:text="运费总额:"
            android:textColor="@color/text_color2"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line_view2"
            android:layout_marginRight="15dp"
            android:layout_marginTop="17dp"
            android:paddingBottom="17dp"
            android:text=""
            android:textColor="@color/my_pink_color"
            android:textSize="17dp" />

    </RelativeLayout>


</RelativeLayout>