<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_background_color"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="常用标签"
                android:textColor="@color/my_black_color"
                android:textSize="16dp" />

            <com.foryou.truck.view.GridViewForScrollView
                android:id="@+id/tag_beizhu_gv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="4"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:verticalSpacing="20dp"></com.foryou.truck.view.GridViewForScrollView>

            <!--    android:stretchMode="columnWidth"
                android:columnWidth="150dp"-->
            <RadioGroup
                android:id="@+id/single_rg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#f1f1f1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/remarks_size" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#f1f1f1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/remarks_size" />

                <RadioButton
                    android:id="@+id/rb3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#f1f1f1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/remarks_size" />

                <RadioButton
                    android:id="@+id/rb4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#f1f1f1"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/remarks_size" />
            </RadioGroup>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_background_color"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:text="备注"
                android:textColor="@color/my_black_color"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_size"
                android:background="#e2e2e2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/beizhu_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="特殊情况请填写备注,如有送货时间要求,请在备注中写明"
                    android:minLines="6"
                    android:textColor="@color/black"
                    android:textColorHint="@color/my_gray_color"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                android:id="@+id/save_beizhu_bt"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/margin_right_size"
                android:layout_marginRight="@dimen/margin_right_size"
                android:layout_marginTop="@dimen/margin_top_size"
                android:background="@drawable/login_btn"
                android:text="保存"
                android:textColor="#ffffff"
                android:textSize="@dimen/person_center1_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>