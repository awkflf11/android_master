<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_left_size"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/driver_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="12dp"
            android:text="司机姓名"
            android:textColor="@color/write_text_color"
            android:textSize="@dimen/order_detail_text_size" />

        <TextView
            android:id="@+id/driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/driver_name_text"
            android:background="@null"
            android:paddingBottom="12dp"
            android:textColor="@color/write_text_color"
            android:textSize="@dimen/order_detail_text_size" />

        <TextView
            android:id="@+id/refresh_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_size"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_2"
            android:text="更新司机位置"
            android:textColor="@color/white"
            android:textSize="@dimen/order_detail_text_size"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/driver_phone_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_left_size"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/siji_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="司机手机"
            android:textColor="@color/write_text_color"
            android:textSize="@dimen/order_detail_text_size" />

        <TextView
            android:id="@+id/driver_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/siji_text"
            android:background="@null"
            android:textColor="@color/my_blue_color"
            android:textSize="@dimen/order_detail_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_left_size"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="车牌号"
            android:textColor="@color/write_text_color"
            android:textSize="@dimen/order_detail_text_size" />

        <TextView
            android:id="@+id/driver_plate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:textColor="@color/write_text_color"
            android:textSize="@dimen/order_detail_text_size" />
    </LinearLayout>

</LinearLayout>