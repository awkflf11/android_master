<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_layout" />

    <LinearLayout
        android:id="@+id/account_edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="38dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="+86"
            android:textColor="@color/text_color3"
            android:textSize="14dp" />

        <com.foryou.truck.view.WithDelImgEditText
            android:id="@+id/account_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:hint="输入手机号码"
            android:inputType="numberSigned"
            android:maxLength="11"
            android:textColor="@color/text_color1"
            android:textColorHint="@color/text_color3"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/account_edit_ll"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/separation_line" />


    <LinearLayout
        android:id="@+id/yanzhengma_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/line1"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:orientation="horizontal">

        <com.foryou.truck.view.WithDelImgEditText
            android:id="@+id/yanzhengma"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@null"
            android:hint="验证码"
            android:inputType="number"
            android:paddingRight="15dp"
            android:textColor="@color/text_color1"
            android:textColorHint="@color/text_color3"
            android:textSize="14dp" />

        <Button
            android:id="@+id/get_yanzhengma"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_weight="1.5"
            android:background="@drawable/border_btn_getcode"
            android:text="获取验证码"
            android:textColor="#ff6900"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/yanzhengma_layout"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/separation_line" />

    <LinearLayout
        android:id="@+id/voice_verify_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/voice_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="短信验证码收不到? 试试语音验证码"
            android:textColor="@color/my_blue_color"
            android:textSize="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/next_step"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/voice_verify_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold" />

</RelativeLayout>