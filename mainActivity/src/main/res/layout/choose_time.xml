<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7e000000"
    android:orientation="vertical" >

    <include
        android:id="@+id/time_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/choose_data_time" />

    <RelativeLayout
        android:id="@+id/dialog_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:background="@color/hint_color"
        android:layout_above="@id/time_layout" >
        
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/my_gray_color"
            android:text="取消"
            />
        
        <TextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/my_blue_color"
            android:layout_alignParentRight="true"
            android:text="确定"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/finish_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/dialog_title_layout" />

</RelativeLayout>