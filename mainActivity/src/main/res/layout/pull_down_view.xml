<?xml version="1.0" encoding="utf-8"?>
<com.foryou.truck.view.PullDownView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pull_down_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.foryou.truck.view.HeaderView
        android:id="@+id/pull_down_headerview"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_marginTop="-61dip" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/pull_down_headerview1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ProgressBar
                android:id="@+id/refresh_progress"
                style="@android:style/Widget.ProgressBar.Small.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="5dip"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/status_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/pulltorefresh_down_arrow" />

                <TextView
                    android:id="@+id/status_info"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/pull_to_refresh_pull_label"
                    android:textColor="@color/my_buddy_footer_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/last_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dip"
                    android:textColor="@color/my_buddy_footer_color"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </com.foryou.truck.view.HeaderView>

    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/my_black_color"
        android:visibility="gone" >
    </ImageView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.foryou.truck.view.MyListView
            android:id="@+id/pull_down_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/main_background_color"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="#00000000" />

        <include
            android:id="@+id/no_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            layout="@layout/no_content_view"
            android:visibility="gone" />
        <!--
            com.foryou.truck.view.swipemenulistview.SwipeMenuListView
            android:id="@+id/pull_down_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@color/main_background_color"
            android:dividerHeight="0px"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:listSelector="#00000000" /
        -->

        <ImageView
            android:id="@+id/top_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/fanhuidingbu"
            android:visibility="gone" />
    </RelativeLayout>

    <!--
        com.foryou.truck.view.MyListView
        android:id="@+id/pull_down_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/my_buddy_footer_color"
        android:dividerHeight="0px"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="#00000000" /
    -->

</com.foryou.truck.view.PullDownView>