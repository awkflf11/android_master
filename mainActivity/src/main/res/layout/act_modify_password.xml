<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="#f1f1f1" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current_password__key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="当前密码"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/edittext_size" />

                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/current_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/current_password__key"
                    android:background="@null"
                    android:hint="输入当前密码"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/text_color1"
                    android:textColorHint="#c5c5c5"
                    android:textSize="@dimen/edittext_size" />

            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/new_password_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="新密码    "
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/edittext_size" />

                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/new_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/new_password_key"
                    android:background="@null"
                    android:hint="输入新密码"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/text_color1"
                    android:textColorHint="#c5c5c5"
                    android:textSize="@dimen/edittext_size" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/confirm_password_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="确认密码"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/edittext_size" />

                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/confirm_password_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/confirm_password_key"
                    android:background="@null"
                    android:hint="再次输入新密码"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="@color/text_color1"
                    android:textColorHint="#c5c5c5"
                    android:textSize="@dimen/edittext_size" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/visable_password_rl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:background="@color/main_background_color"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/visable_password_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="显示密码"
                    android:textColor="@color/text_color2"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/visable_password_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/visable_password_tv"
                    android:background="@drawable/icon_gou1" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>