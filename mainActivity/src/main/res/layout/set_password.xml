<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_gray1_color">

    <include
        android:id="@+id/title_layout"
        layout="@layout/top_layout" />

    <com.foryou.truck.view.WithDelImgEditText
        android:id="@+id/set_password"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:hint="请输入新密码"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_color1"
        android:textColorHint="@color/text_color3"
        android:textSize="16dp" />

    <com.foryou.truck.view.WithDelImgEditText
        android:id="@+id/set_password2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/set_password"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/login_input"
        android:hint="请重新输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textColorHint="#bcbcbc"
        android:textSize="15dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/set_password2"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/login_btn"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>