<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical" >

    <include layout="@layout/top_layout" />

    <RelativeLayout
        android:id="@+id/regular_address_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_cell_height"
        android:layout_marginTop="@dimen/top_padding_size"
        android:background="@color/white" >

        <TextView
            android:id="@+id/regular_address"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left_size"
            android:text="常用地址"
            android:textColor="@color/my_pink_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/pick_up"
            android:layout_width="18dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_right_size"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/my_gray_color"
            android:background="@drawable/back_icon_down2"
            android:textSize="16dp"
           />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_cell_height"
        android:layout_marginTop="20dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_left_size"
            android:background="@drawable/send_place" />

        <LinearLayout
            android:id="@+id/select_province_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/img1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请选择省市区"
                android:textColor="@color/my_black1_color"
                android:textColorHint="@color/hint_color"
                android:textSize="16dp" />
        </LinearLayout>

        <!--
                     <EditText
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/img1"
                android:background="@null"
                android:hint="请选择省市区"
                android:textColor="@color/write_text_color"
                android:textColorHint="@color/hint_color"
                android:textSize="16dp" />
        -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="35dp"
            android:background="@color/line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_cell_height"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_left_size"
            android:background="@drawable/zh_on_btn"
            android:visibility="invisible" />

        <com.foryou.truck.view.WithDelImgEditText
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/img2"
            android:background="@null"
            android:hint="输入详细地址"
            android:imeOptions="actionSearch"
            android:textColor="@color/my_black1_color"
            android:textColorHint="@color/hint_color"
            android:textSize="16dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="帮我们填写详细地址,以便为您提供更准确的报价 (详细地址询价后不可修改)"
        android:textColor="@color/my_pink_color"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/confirm_query_place"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_btn"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>
