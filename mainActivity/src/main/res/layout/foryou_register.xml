            <!--验证码：+++++++++++++ -->
            <RelativeLayout
                android:id="@+id/yanzhengma_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/yanzhengma_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="验证码    "
                    android:textColor="@color/text_color2"
                    android:textSize="16dp" />


                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/yanzhengma_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/yanzhengma_key"
                    android:background="@null"
                    android:hint="输入短信验证码"
                    android:inputType="number"
                    android:maxLength="8"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/separation_line" />

            </RelativeLayout>

            <!--密码++++++++++ -->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/password_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="登录密码"
                    android:textColor="@color/text_color2"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/password_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:src="@drawable/icon_password2" />

                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/mPassword_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/password_iv"
                    android:layout_toRightOf="@id/password_key"
                    android:background="@null"
                    android:hint="设置登录密码"
                    android:inputType="textPassword"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/separation_line" />
            </RelativeLayout>

            <!-- 邀请码 -->

            <RelativeLayout
                android:id="@+id/invite_code_rl"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:visibility="gone">

                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/invite_code_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:hint="邀请码  (非必填)"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/text_color3"
                    android:textSize="14dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/separation_line" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/voice_verify_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/voice_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="短信验证码收不到? 试试语音验证码"
                    android:textColor="@color/text_color2"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/layout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>