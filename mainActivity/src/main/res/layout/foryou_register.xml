<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--姓名-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/usename_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="联系人    "
                    android:textColor="@color/text_color2"
                    android:textSize="16dp" />

                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/username_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/usename_key"
                    android:background="@null"
                    android:hint="输入联系人"
                    android:inputType="text"
                    android:maxLength="20"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/separation_line" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/account_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/person_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="手机号码"
                    android:textColor="@color/text_color2"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/get_yanzhengma"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/border_btn_getcode"
                    android:text="获取验证码"
                    android:textColor="#ff6900"
                    android:textSize="14dp" />

                <com.foryou.truck.view.WithDelImgEditText
                    android:id="@+id/account_edit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/get_yanzhengma"
                    android:layout_toRightOf="@id/person_img"
                    android:background="@null"
                    android:hint="输入手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/text_color1"
                    android:textColorHint="@color/hint_color"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/separation_line" />

            </RelativeLayout>

            <!--所在城市-->
